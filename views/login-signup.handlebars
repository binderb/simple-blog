<div class="container-fluid d-flex justify-content-center p-4">
  <div class="row col-12 col-sm-10 col-md-8 border border-4 border-dark">
    <div class="container-fluid">
      <div class="row p-2 justify-content-between align-items-center bg-dark text-white">
        <div class="col-12 fs-5 fw-bold">
          {{#if active_login}} Login {{ else }} Sign Up {{/if}}
        </div>
      </div>
      <div class="row">
        <div class="col-12 p-4">
          <form id="login-signup-form">
            <div class="mb-3">
              <label for="username" class="form-label fw-bold">Username:</label>
              <input type="text" class="form-control" id="username">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label fw-bold">Password:</label>
              <input type="password" class="form-control" id="password">
              {{#unless active_login}}
              <div id="password_help" class="form-text">Passwords must be at least 8 characters.</div>
              {{/unless}}
            </div>
            {{#if active_login}}
            <div class="mb-3">
              First time here? <a class="link-dark" href="./signup">Sign up!</a>
            </div>
            {{else}}
            <div class="mb-3">
              Already have a profile? <a class="link-dark" href="./login">Login here!</a>
            </div>
            {{/if}}
            <div class="d-flex align-items-center">
              <button type="submit" id="submit" class="btn btn-dark">Submit</button>
              <div id="err" class="p-2 m-0 form-text text-danger text-center"></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
{{#if active_login}}
<script src="/assets/js/login.js"></script>
{{else}}
<script src="/assets/js/signup.js"></script>
{{/if}}