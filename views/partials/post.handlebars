<div class="container-fluid p-2">
  <div class="row p-2 justify-content-between align-items-center bg-dark text-white">
    <a href="/post/{{ id }}" class="col-6 fs-5 link-light fw-bold text-decoration-none">
      {{ title }}
    </a>
    <div class="col-6 d-flex justify-content-end small-text text-end">
      posted by&nbsp;<b>{{ user.username }}</b>&nbsp;on {{ format_datetime created }}
    </div>
  </div>
  <div class="row p-2 bg-light border border-dark border-3">
    <p class="m-0 text-truncate">
      {{ content }}
    </p>
  </div>
</div>
