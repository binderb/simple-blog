<div class="container-fluid p-2">
  <div class="row px-2 my-4 justify-content-center">
    <h2 class="col-12 text-dark fw-bold">
      SIMPLE_BLOG / Home
    </h2>
  </div>
</div>
<div class="container-fluid p-4 pb-2 bg-light-grey">
  <div class="row justify-content-center py-2">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h4 class="fw-bold d-inline-block">
          All Posts
      </h4>
    </div>
  </div>
</div>
<div class="container-fluid px-4 pb-4 bg-light-grey">
  {{#if posts}}
  {{#each posts as |post|}}
    {{>post post_all=true}}
  {{/each}}
  {{else}}
  No posts yet.
  {{/if}}
</div>